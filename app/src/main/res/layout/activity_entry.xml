<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.quizapp.EntryActivity"
    android:gravity="center"
    android:background="@drawable/bg">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/entry_image_width"
        android:layout_height="@dimen/entry_image_height"
        android:layout_marginBottom="@dimen/entry_margin"
        android:src="@drawable/nhl"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/entry_text"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/black"
        android:layout_marginBottom="@dimen/entry_margin"
        android:textSize="@dimen/entry_text_size"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding"
        android:text="@string/entry_button_text"
        android:onClick="startQuiz"/>

</LinearLayout>
